<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atinytot.vegsp_v_1">

    <!--允许程序打开网络套接字-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--允许程序获取网络状态-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--opengl-->
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />
    <!--AEP 可确保您的应用支持除 OpenGL 3.1 规范中描述的核心 OpenGL 扩展集之外的标准化扩展集-->
    <uses-feature
        android:name="android.hardware.opengles.aep"
        android:required="true" />


    <application
        android:name=".view.App"
        android:allowBackup="true"
        android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
        android:icon="@mipmap/grass"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/grass"
        android:supportsRtl="true"
        android:theme="@style/Theme.VegSp_V_1">

        <!--屏幕适配方案-->
        <!--        <meta-data android:name="android.max_aspect" android:value="ratio_float"/>-->
        <meta-data
            android:name="maxAspectRatio"
            android:value="ratio_float" />

        <activity
            android:name=".view.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Mqtt Service -->
        <service android:name="org.eclipse.paho.android.service.MqttService" />
    </application>

</manifest>