<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/marquee_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text=""
                android:textSize="20sp"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/soil_temp_card"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                app:cardBackgroundColor="#BFEFC2"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#808080"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="10"
                            android:text="当前土壤温度："
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="34dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/soil_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:shadowColor="#808080"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="10"
                                android:text="1"
                                android:textSize="22sp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/temp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="12dp">

                        <com.github.anastr.speedviewlib.PointerSpeedometer
                            android:id="@+id/soil_temp_pointerSpeedometer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:sv_withTremble="false"
                            app:sv_backgroundCircleColor="#49E3D4"
                            app:sv_centerCircleColor="@color/transparent"
                            app:sv_indicator="TriangleIndicator"
                            app:sv_indicatorWidth="12dp"
                            app:sv_maxSpeed="60"
                            app:sv_minSpeed="-5"
                            app:sv_speedTextPosition="CENTER"
                            app:sv_speedTextSize="12sp"
                            app:sv_speedometerWidth="8dp"
                            app:sv_textColor="@color/black"
                            app:sv_textSize="8sp"
                            app:sv_tickNumber="8"
                            app:sv_tickPadding="26dp"
                            app:sv_unit="°C"
                            app:sv_unitTextSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/soil_humidity_card"
                    android:layout_width="0dp"
                    android:layout_height="196dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#BFEFC2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#808080"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="10"
                            android:text="当前土壤湿度："
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/soil_humidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:shadowColor="#808080"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="10"
                                android:text="1"
                                android:textSize="16sp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/percent" />
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <com.atinytot.vegsp_v_1.mould.MyWaveProgress
                                android:id="@+id/soil_humidity_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                app:darkWaveAnimTime="1000"
                                app:darkWaveColor="#803cbcb7"
                                app:lightWaveAnimTime="2000"
                                app:lightWaveColor="#800de6e8"
                                app:lightWaveDirect="R2L"
                                app:lockWave="false"
                                app:valueSize="20sp"
                                app:waveHeight="15dp"
                                app:waveNum="1" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.05" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/hv_card"
                    android:layout_width="0dp"
                    android:layout_height="196dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#BFEFC2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#808080"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="10"
                            android:text="当前光照强度："
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/hv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:shadowColor="#808080"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="10"
                                android:text="1"
                                android:textSize="16sp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="20dp"
                                android:layout_height="16dp"
                                android:background="@drawable/hv" />
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <com.atinytot.vegsp_v_1.mould.MyWaveProgress
                                android:id="@+id/hv_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                app:darkWaveAnimTime="1000"
                                app:darkWaveColor="#803cbcb7"
                                app:lightWaveAnimTime="2000"
                                app:lightWaveColor="#800de6e8"
                                app:lightWaveDirect="R2L"
                                app:lockWave="false"
                                app:maxValue="25000"
                                app:minValue="15000"
                                app:suffixText="Lux"
                                app:valueSize="20sp"
                                app:waveHeight="15dp"
                                app:waveNum="1" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/air_temp_card"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="4dp"
                app:cardBackgroundColor="#BFEFC2"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#808080"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="10"
                            android:text="当前空气温度："
                            android:textSize="16sp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="34dp">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/air_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:shadowColor="#808080"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="10"
                                android:text="1"
                                android:textSize="22sp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/temp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="12dp">

                        <com.github.anastr.speedviewlib.PointerSpeedometer
                            android:id="@+id/air_temp_pointerSpeedometer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:sv_withTremble="false"
                            app:sv_backgroundCircleColor="#49E3D4"
                            app:sv_centerCircleColor="@color/transparent"
                            app:sv_indicator="TriangleIndicator"
                            app:sv_indicatorWidth="12dp"
                            app:sv_maxSpeed="60"
                            app:sv_minSpeed="-5"
                            app:sv_speedTextPosition="CENTER"
                            app:sv_speedTextSize="12sp"
                            app:sv_speedometerWidth="8dp"
                            app:sv_textColor="@color/black"
                            app:sv_textSize="8sp"
                            app:sv_tickNumber="8"
                            app:sv_tickPadding="26dp"
                            app:sv_unit="°C"
                            app:sv_unitTextSize="12sp" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="204dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/air_humidity_card"
                    android:layout_width="0dp"
                    android:layout_height="196dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#BFEFC2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#808080"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="10"
                            android:text="当前空气湿度："
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/air_humidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:shadowColor="#808080"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="10"
                                android:text="1"
                                android:textSize="16sp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/percent" />
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <com.atinytot.vegsp_v_1.mould.MyWaveProgress
                                android:id="@+id/air_humidity_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                app:darkWaveAnimTime="1000"
                                app:darkWaveColor="#803cbcb7"
                                app:lightWaveAnimTime="2000"
                                app:lightWaveColor="#800de6e8"
                                app:lightWaveDirect="R2L"
                                app:lockWave="false"
                                app:valueSize="20sp"
                                app:waveHeight="15dp"
                                app:waveNum="1" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.05" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/CO2_card"
                    android:layout_width="0dp"
                    android:layout_height="196dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#BFEFC2"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:shadowColor="#808080"
                            android:shadowDx="0"
                            android:shadowDy="2"
                            android:shadowRadius="10"
                            android:text="二氧化碳浓度："
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/CO2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:shadowColor="#808080"
                                android:shadowDx="0"
                                android:shadowDy="2"
                                android:shadowRadius="10"
                                android:text="1"
                                android:textSize="16sp" />

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@drawable/percent" />
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="5dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center">

                            <com.atinytot.vegsp_v_1.mould.MyWaveProgress
                                android:id="@+id/CO2_progress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                app:darkWaveAnimTime="1000"
                                app:darkWaveColor="#803cbcb7"
                                app:lightWaveAnimTime="2000"
                                app:lightWaveColor="#800de6e8"
                                app:lightWaveDirect="R2L"
                                app:lockWave="false"
                                app:valueSize="20sp"
                                app:waveHeight="15dp"
                                app:waveNum="1" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>