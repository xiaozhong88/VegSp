<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:SettingItem="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toTopOf="@+id/gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.atinytot.vegsp_v_1.mould.SettingItem
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        SettingItem:show_content="男"
        SettingItem:show_img="@drawable/user"
        SettingItem:show_iright="@drawable/user"
        SettingItem:show_text="性别"
        app:layout_constraintBottom_toTopOf="@+id/revise_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.atinytot.vegsp_v_1.mould.SettingItem
        android:id="@+id/revise_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        SettingItem:show_content=""
        SettingItem:show_img="@drawable/user"
        SettingItem:show_iright="@drawable/user"
        SettingItem:show_text="修改密码"
        app:layout_constraintBottom_toTopOf="@+id/clear_cache"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender" />

    <com.atinytot.vegsp_v_1.mould.SettingItem
        android:id="@+id/clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        SettingItem:show_content=""
        SettingItem:show_img="@drawable/user"
        SettingItem:show_iright="@drawable/user"
        SettingItem:show_text="清除缓存"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/revise_password" />
</androidx.constraintlayout.widget.ConstraintLayout>